
<div class="container">
  <div class="row">
    <div class="col s12 m6">
      <% @show.each do |s| %>
      <%= @orange %>
      <div class="card">
        <div class="card-image">
          <img src=<%= asset_path("hiphop.png") %>>
          <span class="card-title"><%= s.genre %></span>
          <span class="card-date"><%= s.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분") %></span>
        </div>
        <div class="card-content">
          <p><%= s.content %></p>
        </div>
        <div class="card-action">
          <a href="#">This is a link</a>
          <p class="card-difficulty">☆☆☆★★</p>
          <p class="card-like">좋아요</p>
        </div>
        <div class="card-content">
          <form action="/home/comment" method="POST">
            <input type="hidden" name="postid" value="<%= s.id %>"/>
            <input type="text" class="materialize-text" name="title" placeholder="곡 제목"/>
            <textarea id="textarea2" class="materialize-textarea" name="content"></textarea>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
          </form>
        </div>
        <div class="card-content">
          <% s.comments.each do |c| %>
            <%= c.title %><br>
            <%= @orange %>
            <%= c.content %><br>
            <%= c.writer %><br>
            <%= c.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분") %><hr>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
