<% show.comments.reverse.each do |c| %>
  <div id="comment_<%= c.id %>">
    <%= link_to "#{c.title}", home_nokogiri_path(song_id: c.id), id: "nokogiri_#{c.id}", remote: true %><br>
    <%= c.content %><br>
    <%= c.writer %><br>
    <%= c.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분") %>
    <%= link_to "수정", home_correctcomment_path(c.id), class: "green-text text-accent-3", remote: true %>
    <%= link_to "삭제", home_deletecomment_path(c.id), class: "green-text text-accent-3", remote: true %><hr>
  </div>
<% end %>
